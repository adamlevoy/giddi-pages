---
import { Image } from "astro:assets";
import Button from "./Button.astro";
const { title, description, body, src, alt, price, compareAt, href, cta } =
  Astro.props;
---

<div
  class="overflow-hidden rounded-2xl bg-neutral-50 shadow-2xl text-gray-950 flex flex-col"
>
  <Image src={src} alt={alt} />
  <div class="p-4 flex flex-col flex-grow justify-between">
    <div class="mb-8">
      <span class="text-3xl font-bold">{title}</span>
      <h2 class="text-xl">{description}</h2>
      <div class="stats | mt-4">
        <div class="flex gap-x-2">
          <span class="font-bold">Insertible Length:</span>
          <span>3.5 inches</span>
        </div>
        <div class="flex gap-x-2">
          <span class="font-bold">Thickness:</span>
          <span>1.5 inches</span>
        </div>
        <div class="flex gap-x-2">
          <span class="font-bold">Skill Level:</span>
          <span>Advanced</span>
        </div>
      </div>
      <slot />
    </div>
    <Button href={href} cta={cta} />
  </div>
</div>
