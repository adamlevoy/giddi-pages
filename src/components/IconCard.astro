---
import { Icon } from "astro-icon/components";
const { title, body, icon, size } = Astro.props;
---

<article>
  <Icon name={icon} size={size} />
  <h3 class="text-xl font-bold tracking-wide mt-4">{title}</h3>
  <p class="max-w-prose mt-2">{body}</p>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-left: 1rem;
    border-left: 5px solid rgb(var(--color-primary));
  }
</style>
