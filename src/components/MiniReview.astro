---
import { Icon } from "astro-icon/components";
---

<div
  class="review-container | absolute z-10 bg-neutral-200/50 shadow-sm text-neutral-950 rounded-md p-2 top-4 left-4"
  data-order="1"
>
  <span class="font-xs font-bold">OMG!</span>
  <div class="flex">
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
  </div>
</div>
<div
  class="review-container | absolute z-10 bg-neutral-200/50 shadow-sm text-neutral-950 rounded-md p-2 top-40 left-4"
  data-order="2"
>
  <span class="font-xs font-bold">I love this thing!</span>
  <div class="flex">
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
  </div>
</div>
<div
  class="review-container | absolute z-10 bg-neutral-200/50 shadow-sm text-neutral-950 rounded-md p-2 top-12 right-8"
  data-order="3"
>
  <span class="font-xs font-bold">Best toy ever!</span>
  <div class="flex">
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
  </div>
</div>
<div
  class="review-container | absolute z-10 bg-neutral-200/50 shadow-sm text-neutral-950 rounded-md p-2 bottom-12 right-4"
  data-order="4"
>
  <span class="font-xs font-bold">Leg shaking</span>
  <div class="flex">
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
    <Icon name="star-filled" />
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 100;
    }
  }

  .review-container {
    opacity: 0;
    animation: fade-in 2s forwards;
  }

  .review-container[data-order="2"] {
    animation-delay: 0.5s;
  }
  .review-container[data-order="3"] {
    animation-delay: 1s;
  }
  .review-container[data-order="4"] {
    animation-delay: 1.5s;
  }

  [data-icon="star-filled"] {
    color: rgb(var(--color-primary));
    font-size: 1rem;
  }
</style>
