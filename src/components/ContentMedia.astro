---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const {
  title,
  description,
  body,
  src,
  alt,
  href,
  cta,
  reverseImg = false,
  video,
} = Astro.props;
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <div
    class={`${reverseImg ? "md:order-2" : ""}
    flex flex-col justify-center p-6 md:p-12
    `}
  >
    <span class="text-4xl font-bold">{title}</span>
    <h2 class="text-3xl italic">{description}</h2>
    <p class="max-w-prose mt-4">{body}</p>
    <div class="mt-8">
      <slot />
      <div class="flex flex-col sm:flex-row gap-4">
        <a href={href} target="_blank" class="btn">{cta}</a>
        {
          video ? (
            <button class="open-modal | btn-outline gap-x-2" data-video={video}>
              Watch Video
              <Icon name="play" size={20} />
            </button>
          ) : null
        }
      </div>
    </div>
  </div>
  <Image
    src={src}
    alt={alt}
    class={`${reverseImg ? "md:order-1" : ""} rounded-2xl`}
  />
</div>
