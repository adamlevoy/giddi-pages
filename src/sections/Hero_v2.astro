<style>
  .hero-container {
    min-height: 100vh;
    display: grid;
    grid-template-rows: min-content 1fr;
    place-items: center;
  }

  [data-icon] {
    font-size: 1.5rem;
  }

  [data-icon="award-trophy"] {
    color: goldenrod;
  }

  [data-icon="checkmark-filled"] {
    color: rgb(var(--color-primary));
  }

  video {
    transform: scaleX(-1);
  }
</style>
