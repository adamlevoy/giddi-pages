---
import Layout from "../layouts/Layout.astro";
import HeroV2 from "../sections/Hero_v2.astro";
import Collection from "../sections/Collection.astro";
import Footer from "../sections/Footer.astro";
import Showcase from "../sections/Showcase.astro";
import LogoScroller from "../components/LogoScroller.astro";
import Benefits from "../sections/Benefits.astro";
import ValueProps from "../sections/ValueProps.astro";
import Testimonials from "../sections/Testimonials.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout title="Award Winning Prostate Massagers">
  <HeroV2 />
  <LogoScroller />
  <Collection />
  <Testimonials />
  <Benefits />
  <Showcase />
  <ValueProps />
  <SectionContainer>
    <div class="flex flex-col items-center justify-center">
      <span class="text-2xl font-bold">Still not sure?</span>
      <p>Take our short quiz to find your match!</p>
      <a
        href="https://mygiddi.com/tools/perfect-product-finder/quiz"
        target="_blank"
        class="btn-outline mt-8">Find My Match</a
      >
    </div>
  </SectionContainer>
  <Footer />
</Layout>
